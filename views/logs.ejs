<%- include('partials/header', { title: title }) %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">
                <i class="bi bi-file-text"></i>
                Logs - <%= tunnelName %>
            </h1>
            <div>
                <button type="button" class="btn btn-outline-secondary me-2" onclick="window.history.back()">
                    <i class="bi bi-arrow-left"></i>
                    Back
                </button>
                <button type="button" class="btn btn-outline-primary" id="toggleLogs">
                    <i class="bi bi-play-circle"></i>
                    Start Live Logs
                </button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearLogs()">
                    <i class="bi bi-trash"></i>
                    Clear
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Connection Status -->
<div class="row mb-3">
    <div class="col-12">
        <div class="alert alert-info" id="connectionStatus" style="display: none;">
            <i class="bi bi-info-circle"></i>
            <span id="statusText">Connecting...</span>
        </div>
    </div>
</div>

<!-- Log Terminal -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-terminal"></i>
                    Live Logs
                </h5>
                <small class="text-muted" id="logCount">0 lines</small>
            </div>
            <div class="card-body p-0">
                <div id="logTerminal" class="log-terminal">
                    <div class="p-3 text-muted text-center">
                        <i class="bi bi-play-circle display-4"></i>
                        <p class="mt-2">Click "Start Live Logs" to begin streaming logs</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Auto-scroll Toggle -->
<div class="row mt-3">
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="autoScroll" checked>
            <label class="form-check-label" for="autoScroll">
                Auto-scroll to bottom
            </label>
        </div>
    </div>
</div>

<script>
// Pass tunnel name to JavaScript
window.tunnelName = '<%= tunnelName %>';
</script>

<%- include('partials/footer') %>
